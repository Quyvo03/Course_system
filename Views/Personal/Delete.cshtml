@model WebApplication1.Models.PersonalInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        .form-container {
            width: 50%; /* Điều chỉnh độ rộng của phần tử container */
            margin: 0 auto; /* Căn giữa phần tử container */
        }

        /* Các tùy chỉnh CSS khác ở đây */
        /* CSS cho phần container */
        .form-container {
            width: 50%;
            margin: 0 auto;
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            /* CSS cho tiêu đề */
            .form-container h3 {
                font-size: 24px;
                margin-bottom: 20px;
                color: #333;
            }

            /* CSS cho phần PersonalInfo */
            .form-container h4 {
                font-size: 18px;
                margin-bottom: 10px;
                color: #555;
            }

            .form-container hr {
                margin-top: 5px;
                margin-bottom: 15px;
                border-top: 1px solid #ddd;
            }

            /* CSS cho danh sách thông tin */
            .form-container dl {
                margin-bottom: 15px;
            }

                .form-container dl dt {
                    font-weight: bold;
                    margin-bottom: 5px;
                }

                .form-container dl dd {
                    margin-left: 0;
                    margin-bottom: 10px;
                    color: #777;
                }

        /* CSS cho nút và liên kết */
        .form-actions {
            margin-top: 20px;
        }

            .form-actions input[type="submit"] {
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 3px;
                cursor: pointer;
            }

                .form-actions input[type="submit"]:hover {
                    background-color: #0056b3;
                }

            .form-actions a {
                color: #007bff;
                text-decoration: none;
            }

                .form-actions a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>
    <div class="form-container">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>PersonalInfo</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Age)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>

</body>
</html>
