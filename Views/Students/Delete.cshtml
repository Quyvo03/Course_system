@model WebApplication1.Models.Students

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        /* CSS cho form */
        form {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* CSS cho phần container */
        .form-container {
            width: 50%;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* CSS cho tiêu đề */
        h4 {
            font-size: 18px;
            color: #333;
            margin-bottom: 20px;
        }

        /* CSS cho đường ngăn cách */
        hr {
            margin-top: 5px;
            margin-bottom: 15px;
            border-top: 1px solid #ddd;
        }

        /* CSS cho nút */
        .btn {
            padding: 10px 20px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

    </style>
</head>
<body>
    <form id="deleteStudentForm" method="post">
        <div class="form-container">
            @Html.AntiForgeryToken()

            <div class="form-content">
                <h4>Students</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.StudentName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StudentName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Classes.ClassName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Classes.ClassName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Courses.CourseName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Courses.CourseName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Users.Username)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Users.Username)
                    </dd>
                </dl>

                <div class="form-actions">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </form>

</body>
</html>
